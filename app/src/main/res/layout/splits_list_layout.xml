<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/s_list_img"
            android:layout_alignLeft="@+id/linearLayout_1"
            android:layout_alignStart="@+id/linearLayout_1"
            android:src="@android:drawable/presence_invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/s_list_txt"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/s_list_img"
            android:layout_toEndOf="@+id/s_list_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/s_list_url"
            android:text="Plain Text"
            android:layout_below="@+id/s_list_txt"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_alignLeft="@+id/s_list_txt"
            android:layout_alignStart="@+id/s_list_txt" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/s_list_url"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout_1"
            android:baselineAligned="false"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <android.support.v7.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/cardView1"
                    android:layout_centerHorizontal="true"
                    app:cardBackgroundColor="@android:color/holo_red_light"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="5dp">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/s_btn_shortcut"
                        android:src="@drawable/ic_add_circle_black_24dp"
                        android:background="#00FFFFFF"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                </android.support.v7.widget.CardView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="加入桌面"
                    android:id="@+id/s_txt_shortcut"
                    android:textSize="12sp"
                    android:layout_gravity="bottom"
                    android:layout_below="@+id/cardView1"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <android.support.v7.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/cardView2"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    app:cardBackgroundColor="@android:color/holo_orange_dark"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="5dp">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/s_btn_cenn"
                        android:src="@drawable/ic_public_black_24dp"
                        android:background="#00FFFFFF"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="連結網頁"
                    android:id="@+id/s_txt_cenn"
                    android:textSize="12sp"
                    android:layout_below="@+id/cardView2"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <android.support.v7.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/cardView3"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    app:cardBackgroundColor="@android:color/holo_green_light"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="5dp">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/s_btn_share"
                        android:background="#00FFFFFF"
                        android:src="@drawable/ic_share_black_24dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="分享網頁"
                    android:id="@+id/s_txt_share"
                    android:textIsSelectable="false"
                    android:textSize="12sp"
                    android:layout_below="@+id/cardView3"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <android.support.v7.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/cardView4"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    app:cardBackgroundColor="@android:color/holo_blue_light"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="5dp">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/s_btn_delete"
                        android:src="@drawable/ic_add_black_24dp"
                        android:background="#00FFFFFF"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="儲存網頁"
                    android:id="@+id/s_txt_delete"
                    android:textIsSelectable="false"
                    android:textSize="12sp"
                    android:layout_below="@+id/cardView4"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>